                    android:src="@drawable/boangisa_default"/>
                <ImageButton
                    style="@style/Poster_btn"
                    android:src="@drawable/boangisa_default"/>
                <ImageButton
                    style="@style/Poster_btn"
                    android:src="@drawable/boangisa_default"/>
                <ImageButton
                    style="@style/Poster_btn"
                    android:src="@drawable/boangisa_default"/>
            </LinearLayout>
            <TextView
                style="@style/Main_text"
                android:text="정보보호 실무"></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    style="@style/Poster_btn"
                    android:src="@drawable/boangisa_default"/>
                <ImageButton
                    style="@style/Poster_btn"
                    android:src="@drawable/boangisa_default"/>
                <ImageButton
                    style="@style/Poster_btn"
                    android:src="@drawable/boangisa_default"/>
                <ImageButton
                    style="@style/Poster_btn"
                    android:src="@drawable/boangisa_default"/>
            </LinearLayout>
            <TextView
                style="@style/Main_text"
                android:text="네트워크 보안"></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    style="@style/Poster_btn"
                    android:src="@drawable/boangisa_default"/>
                <ImageButton
                    style="@style/Poster_btn"
                    android:src="@drawable/boangisa_default"/>
                <ImageButton
                    style="@style/Poster_btn"
                    android:src="@drawable/boangisa_default"/>
                <ImageButton
                    style="@style/Poster_btn"
                    android:src="@drawable/boangisa_default"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>